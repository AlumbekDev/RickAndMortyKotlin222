<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.character.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/action_characterFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />

        <action
            android:id="@+id/action_characterFragment_to_myDialogFragment"
            app:destination="@id/myDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.character.datailcharacter.CharacterDetailFragment"
        android:label="Character Detail"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.episode.EpisodeFragment"
        android:label="Episode"
        tools:layout="@layout/fragment_episode" >
        <action
            android:id="@+id/action_episodeFragment_to_episodeDetailFragment"
            app:destination="@id/episodeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" >
        <action
            android:id="@+id/action_locationFragment_to_locationDetailFragment"
            app:destination="@id/locationDetailFragment" />
    </fragment>

    <dialog
        android:id="@+id/myDialogFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.dialog.MyDialogFragment"
        android:label="fragment_my_dialog"
        tools:layout="@layout/fragment_my_dialog" >
        <argument
            android:name="image"
            app:argType="string"
            android:defaultValue="null" />
    </dialog>
    <fragment
        android:id="@+id/episodeDetailFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.episode.detailepisode.EpisodeDetailFragment"
        android:label="fragment_episode_detail"
        tools:layout="@layout/fragment_episode_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="com.example.rickandmortykotlin22.ui.fragment.location.detaillocation.LocationDetailFragment"
        android:label="fragment_location_detail"
        tools:layout="@layout/fragment_location_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>